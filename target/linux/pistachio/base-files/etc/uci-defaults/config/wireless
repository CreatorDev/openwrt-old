config wifi-device  radio0
        option type     mac80211
        option channel  1
        option hwmode   11g
        option path     'virtual/uccp420/uccwlan'
        option htmode   'none'

config wifi-iface 'ap'
        option device 'radio0'
        option network 'ap'
        option mode 'ap'
        option ssid 'CreatorAP'
        option encryption 'none'
